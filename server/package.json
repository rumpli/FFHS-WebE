{
  "name": "towerlords-backend",
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "smoke:round-end:ts": "tsx ./scripts/smoke-round-end.ts",
    "smoke:simulation:ts": "tsx ./scripts/smoke-sim.ts",
    "smoke:goblin-raid:ts": "tsx ./scripts/smoke-goblin-raid.ts",
    "smoke": "npm run smoke:round-end:ts && npm run smoke:simulation:ts && npm run smoke:goblin-raid:ts",
    "ci": "npm run test && npm run smoke",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev --name init",
    "migrate:deploy": "prisma migrate deploy",
    "start": "node dist/index.js",
    "start:prod": "prisma migrate deploy && node dist/index.js",
    "test": "vitest run --silent"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/websocket": "^11.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.206.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.206.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/host-metrics": "^0.36.2",
    "@opentelemetry/instrumentation-fastify": "^0.51.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-logs": "^0.206.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "^6.17.1",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.3",
    "fastify": "^5.6.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.3.2",
    "prisma": "^6.17.1",
    "prom-client": "^15.1.3",
    "tsx": "^4.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/ws": "^8.5.10",
    "typescript": "^5.6.3",
    "vitest": "^1.2.0"
  }
}
